<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <title>Job for you</title>
    <style>
      @media only screen and (max-width: 600px) {
        .container {
          width: 100% !important;
        }
        .content {
          padding: 20px !important;
        }
        .job-title {
          font-size: 16px !important;
        }
        .cta-btn {
          font-size: 14px !important;
          padding: 10px 16px !important;
        }
      }
    </style>
  </head>
  <body style='margin:0; padding:0; background:#f5f5f5; font-family: Arial, sans-serif;'>
    <table role='presentation' width='100%' cellspacing='0' cellpadding='0' border='0'>
      <tr>
        <td align='center' style='padding: 20px 0;'>
          <!-- Container -->
          <table
            class='container'
            role='presentation'
            width='600'
            cellspacing='0'
            cellpadding='0'
            border='0'
            style='background:#ffffff; border-radius:6px; overflow:hidden;'
          >

            <!-- Header -->
            <tr>
              <td
                style='padding: 20px; background:#007BFF; color:#ffffff; font-size:20px; font-weight:bold;'
                align='left'
              >
                Share Jobs
              </td>
              <td
                style='padding: 20px; background:#007BFF; color:#ffffff; font-size:14px;'
                align='right'
              >
                √çt nh∆∞ng m√† ch·∫•t
              </td>
            </tr>

            <!-- Greeting -->
            <tr>
              <td
                colspan='2'
                class='content'
                style='padding:30px; color:#333333; font-size:16px; line-height:1.5;'
              >
                <p style='margin:0 0 10px 0;'>Hi {{receiver}},</p>
                <p style='margin:0;'>One of these jobs may be your next one. Find out today!</p>
              </td>
            </tr>

            <!-- Job List -->
            <tr>
              <td colspan='2' style='padding:0 30px 20px 30px;'>
                <table role='presentation' width='100%' cellspacing='0' cellpadding='0' border='0'>
                  {{#each jobs}}
                    <tr>
                      <td style='padding:15px 0; border-bottom:1px dashed #ddd;'>
                        <div
                          class='job-title'
                          style='font-size:18px; font-weight:bold; margin-bottom:5px;'
                        >
                          <a
                            href=''
                            target='_blank'
                            style='color:#007BFF; text-decoration:none;'
                          >{{name}}</a>
                        </div>
                        <div style='font-size:14px; color:#555;'>{{company}}</div>
                        <div style='font-size:14px; color:#555; margin:5px 0;'>üí∞ {{salary}}</div>
                        <div>
                          {{#each skills}}
                            <span
                              style='display:inline-block; background:#f0f0f0; color:#333; font-size:12px; padding:4px 8px; border-radius:4px; margin:2px;'
                            >{{this}}</span>
                          {{/each}}
                        </div>
                      </td>
                    </tr>
                  {{/each}}
                </table>
              </td>
            </tr>

            <!-- CTA -->
            <tr>
              <td colspan='2' align='center' style='padding:30px;'>
                <a
                  href=''
                  target='_blank'
                  class='cta-btn'
                  style='display:inline-block; padding:12px 24px; background:#ea1e30; color:#ffffff; font-size:16px; font-weight:bold; text-decoration:none; border-radius:5px;'
                >
                  Xem th√™m job t·∫°i Share Jobs
                </a>
              </td>
            </tr>

            <!-- Footer -->
            <tr>
              <td colspan='2' style='padding:20px 30px; font-size:14px; color:#888;'>
                <p style='margin:0;'>Cheers,</p>
                <p style='margin:0;'>The <strong>Share Jobs</strong> Team</p>
                <p style='margin-top:15px; font-size:12px; color:#aaa;'>¬© Share Jobs. All rights
                  reserved.</p>
              </td>
            </tr>

          </table>
        </td>
      </tr>
    </table>
  </body>
</html>